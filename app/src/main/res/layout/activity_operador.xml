<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sinergiass.asistencia.OperadorActivity">

    <Button
        android:id="@+id/btnFace"
        android:layout_width="145dp"
        android:layout_height="40dp"
        android:drawableLeft="@drawable/ic_camera_alt_black_24dp"
        android:text="Tomar Foto"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/guardar"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginLeft="43dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="82dp"
        android:layout_height="31dp"
        android:editable="false"
        android:text="Nombres"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/textView12"
        android:layout_marginLeft="51dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="83dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="75dp"
        android:layout_height="26dp"
        android:layout_marginTop="40dp"
        android:text="Apellidos"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginLeft="51dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="59dp"
        android:layout_height="24dp"
        android:layout_marginTop="44dp"
        android:text="Cédula"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        android:layout_marginLeft="51dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="74dp"
        android:layout_height="25dp"
        android:layout_marginTop="49dp"
        android:text="Teléfono"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        android:layout_marginLeft="51dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/guardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar Operador"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="81dp"
        android:layout_marginLeft="111dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Formulario De Registro"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="65dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/txt_nombres"
        android:layout_width="152dp"
        android:layout_height="27dp"
        android:background="@color/common_google_signin_btn_text_dark_default"
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <EditText
        android:id="@+id/txt_apellidos"
        android:layout_width="152dp"
        android:layout_height="27dp"
        android:layout_marginLeft="25dp"
        android:background="@color/common_google_signin_btn_text_dark_default"
        app:layout_constraintLeft_toRightOf="@+id/textView5"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_nombres" />

    <EditText
        android:id="@+id/txt_telefono"
        android:layout_width="152dp"
        android:layout_height="27dp"
        android:layout_marginLeft="26dp"
        android:background="@color/common_google_signin_btn_text_dark_default"
        app:layout_constraintLeft_toRightOf="@+id/textView9"
        android:layout_marginTop="49dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_cedula" />

    <EditText
        android:id="@+id/txt_cedula"
        android:layout_width="152dp"
        android:layout_height="27dp"
        android:layout_marginLeft="41dp"
        android:background="@color/common_google_signin_btn_text_dark_default"
        app:layout_constraintLeft_toRightOf="@+id/textView7"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_apellidos" />

</android.support.constraint.ConstraintLayout>
