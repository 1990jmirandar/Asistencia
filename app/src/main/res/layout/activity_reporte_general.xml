<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.sinergiass.asistencia.ReporteAsistenciaActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:gravity="center"
            android:text="Reporte General Asistencias"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="80dp" />

        <EditText
            android:id="@+id/txtFechaInicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawableStart="@mipmap/ic_calendario"
            android:focusable="false"
            android:gravity="center"
            android:hint="Fecha inicio"
            android:inputType="date" />

        <EditText
            android:id="@+id/txtFechaFin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawableStart="@mipmap/ic_calendario"
            android:focusable="false"
            android:gravity="center"
            android:hint="Fecha fin"
            android:inputType="date" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="50dp" />

        <EditText
            android:id="@+id/txtEmails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:drawableStart="@drawable/ic_mail_black_24dp"

            android:gravity="center"
            android:hint="Destinatarios" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="Porfavor ingrese los correos separados de un ; "
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="ejemplo@hotmail.com;ejemplo2@hotmail...."
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/guard"
            android:layout_width="99dp"
            android:layout_height="29dp"
            android:layout_marginLeft="143dp"
            android:layout_marginTop="0dp"
            android:text="Enviando"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:visibility="invisible" />

        <ProgressBar
            android:id="@+id/progressBar4"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="42dp"
            android:layout_height="37dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:indeterminate="@drawable/progress_circular"
            android:max="100"
            android:progress="20"
            android:visibility="invisible" />

        <Button
            android:id="@+id/enviarReporte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enviar reporte" />


    </LinearLayout>
</LinearLayout>

</ScrollView>