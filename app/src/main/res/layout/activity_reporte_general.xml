<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.sinergiass.asistencia.ReporteAsistenciaActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:gravity="center"
            android:text="Reporte General Asistencias"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="80dp" />

        <EditText
            android:id="@+id/txtFechaInicio"
            android:layout_width="match_parent"
            android:clickable="true"
            android:focusable="false"
            android:hint="Fecha inicio"
            android:gravity="center"
            android:inputType="date"
            android:drawableStart="@mipmap/ic_calendario"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/txtFechaFin"
            android:layout_width="match_parent"
            android:clickable="true"
            android:focusable="false"
            android:hint="Fecha fin"
            android:gravity="center"
            android:inputType="date"
            android:drawableStart="@mipmap/ic_calendario"
            android:layout_height="wrap_content" />
        <Space
            android:layout_width="wrap_content"
            android:layout_height="50dp" />

        <EditText
            android:id="@+id/txtEmails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:drawableStart="@mipmap/ic_launcher_mail"

            android:gravity="center"
            android:hint="Destinatarios"
             />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="Porfavor ingrese los correos separados de un ; "
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="16sp"
             />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="ejemplo@hotmail.com;ejemplo2@hotmail...."
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="16sp"
            />
        <Space
            android:layout_width="wrap_content"
            android:layout_height="50dp" />
        <Button
            android:id="@+id/enviarReporte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enviar reporte"/>



    </LinearLayout>
</LinearLayout>
